<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.campuscoffeeapp.ClemensPerkSpecialtyDrinks" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/specialtyDrinks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/specialty_drinks"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#b21b1b"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_JohnnieAutumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/specialtyDrinks"
                android:background="#b21b1b"
                android:gravity="center"
                android:onClick="johnnieAutumnPage"
                android:text="@string/johnnie_autumn"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_JohnnieAutumn"
                android:layout_alignRight="@+id/button_JohnnieAutumn"
                android:layout_below="@+id/button_JohnnieAutumn"
                android:background="#b21b1b"
                android:gravity="center"
                android:onClick="bennieDreamPage"
                android:text="@string/bennie_dream"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_TurtleMocha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_description"
                android:layout_alignRight="@+id/button_description"
                android:layout_below="@+id/button_description"
                android:background="#b21b1b"
                android:gravity="center"
                android:onClick="theLinkPage"
                android:text="@string/the_link"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_SextonSunrise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_TurtleMocha"
                android:layout_alignRight="@+id/button_TurtleMocha"
                android:layout_below="@+id/button_TurtleMocha"
                android:background="#b21b1b"
                android:gravity="center"
                android:onClick="sextonSurprise"
                android:text="@string/turtle_mocha"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buton_ChapelWalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_SextonSunrise"
                android:layout_alignRight="@+id/button_SextonSunrise"
                android:layout_below="@+id/button_SextonSunrise"
                android:background="#b21b1b"
                android:gravity="center"
                android:onClick="theEchoPage"
                android:text="@string/the_echo"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_AbbyRoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buton_ChapelWalk"
                android:layout_alignRight="@+id/buton_ChapelWalk"
                android:layout_below="@+id/buton_ChapelWalk"
                android:background="#b21b1b"
                android:gravity="center"
                android:onClick="CSBSenatePage"
                android:text="@string/csb_senate"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_TheEcho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_AbbyRoad"
                android:layout_alignRight="@+id/button_AbbyRoad"
                android:layout_below="@+id/button_AbbyRoad"
                android:background="#b21b1b"
                android:gravity="center"
                android:onClick="mochaLovePage"
                android:text="@string/mocha_love_angel"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_AndesMintExtreme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_JohnnieAutumn"
                android:layout_alignParentRight="true"
                android:background="#b21b1b"
                android:gravity="center"
                android:onClick="andesMintExtremePage"
                android:text="@string/andes_mint_extreme"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/black"
                android:gravity="center"
                android:onClick="homePage"
                android:text="@string/home"
                android:textColor="#b21b1b"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>