<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.campuscoffeeapp.JohnnieJavaFlavoredSyrups" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:text="@string/flavored_syrups"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/darker_gray"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_almond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_menu"
                android:layout_below="@+id/text_menu"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="ALMOND"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_banana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="BANANA"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_blackberry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="BLACKBERRY"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_caramel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="@string/caramel"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="CINNAMON"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_cherry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="CHERRY"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_chocolate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="CHOCOLATE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_coconut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="COCONUT"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_hazelnut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="HAZELNUT"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_irishCream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="IRISH CREAM"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_kiwi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="KIWI"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_peach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="PEACH"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_peppermint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="PEPPERMINT"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_pomegranate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="POMEGRANATE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_pumpkinSpice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="PUMPKIN SPICE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_raspberry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="RASPBERRY"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_strawberry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="STRAWBERRY"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_toastedMarshmellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="TOASTED MARSHMELLOW"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_toffeeNut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="TOFFEE NUT"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_vanilla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="VANILLA"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_whiteChocolate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="WHITE CHOCOLATE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:gravity="center"
                android:onClick="homePage"
                android:text="@string/home"
                android:textColor="@android:color/darker_gray"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>