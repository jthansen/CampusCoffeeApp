<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/custom_background_johnnie_java"
    >

    <Button
        android:id="@+id/button_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_menu"
        android:layout_alignRight="@+id/button_menu"
        android:layout_below="@+id/button_staff"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="aboutPage"
        android:text="ABOUT OUR COFFEE"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_menu"
        android:layout_alignRight="@+id/button_menu"
        android:layout_below="@+id/button_daily_offers"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="staffPage"
        android:text="STAFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_specials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_menu"
        android:layout_alignRight="@+id/button_menu"
        android:layout_below="@+id/button_about"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="specialsPage"
        android:text="SPECIALS"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_daily_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_menu"
        android:layout_alignRight="@+id/button_menu"
        android:layout_below="@+id/button_menu"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="dailyOffersPage"
        android:text="DAILY OFFERS"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="menuPage"
        android:text="MENU"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="218dp" />
    
    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_menu"
        android:layout_alignRight="@+id/button_menu"
        android:layout_below="@+id/button_specials"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:onClick="homePage"
        android:text="@string/home"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>