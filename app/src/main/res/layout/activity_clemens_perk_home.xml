<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/custom_clemens_perk_homebg"
    >

    <Button
        android:id="@+id/button_about_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_menu_c"
        android:layout_alignRight="@+id/button_menu_c"
        android:layout_below="@+id/button_staff_c"
        android:background="@drawable/custom_clemens_perk_button_bg" 
        android:gravity="center"
        android:onClick="aboutPage"
        android:text="ABOUT OUR COFFEE"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_staff_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_menu_c"
        android:layout_alignRight="@+id/button_menu_c"
        android:layout_below="@+id/button_daily_offers_c"
        android:background="@drawable/custom_clemens_perk_button_bg" 
        android:gravity="center"
        android:onClick="brewCrewPage"
        android:text="BREW CREW"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_specials_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/button_menu_c"
        android:layout_below="@+id/button_about_c"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_clemens_perk_button_bg"
        android:gravity="center"
        android:onClick="perksPage"
        android:text="PERKS"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_daily_offers_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_menu_c"
        android:layout_alignRight="@+id/button_menu_c"
        android:layout_below="@+id/button_menu_c"
        android:background="@drawable/custom_clemens_perk_button_bg" 
        android:gravity="center"
        android:onClick="dailyOffersPage"
        android:text="DAILY OFFERS"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_menu_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="211dp"
        android:background="@drawable/custom_clemens_perk_button_bg"
        android:gravity="center"
        android:onClick="menuPage"
        android:text="MENU"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    
    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_menu_c"
        android:layout_alignRight="@+id/button_menu_c"
        android:layout_below="@+id/button_specials_c"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:onClick="homePage"
        android:text="@string/home"
        android:textColor="#92020c"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>