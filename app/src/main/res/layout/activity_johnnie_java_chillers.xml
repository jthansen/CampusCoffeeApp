<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.campuscoffeeapp.JohnnieJavaChillers" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:text="CHILLERS"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/darker_gray"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_almond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/scrollView1"
                android:layout_below="@+id/scrollView1"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="mochaPage"
                android:text="MOCHA"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_whiteChocolate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_almond"
                android:layout_below="@+id/button_almond"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="whiteChocolatePage"
                android:text="WHITE CHOCOLATE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_turtleMocha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_whiteChocolate"
                android:layout_below="@+id/button_whiteChocolate"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="turtleMochaPage"
                android:text="TURTLE MOCHA"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_oreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_turtleMocha"
                android:layout_below="@+id/button_turtleMocha"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="oreoPage"
                android:text="OREO"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_vanilla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_oreo"
                android:layout_below="@+id/button_oreo"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="vanillaPage"
                android:text="VANILLA"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_caramel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_vanilla"
                android:layout_below="@+id/button_vanilla"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="caramelPage"
                android:text="CARAMEL"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_hazelnut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_caramel"
                android:layout_below="@+id/button_caramel"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="hazelnutPage"
                android:text="HAZELNUT"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_chai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_hazelnut"
                android:layout_below="@+id/button_hazelnut"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="chaiPage"
                android:text="CHAI"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_buildYourOwn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_caramel"
                android:layout_below="@+id/button_caramel"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="buildYourOwnPage"
                android:text="BUILD YOUR OWN"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:gravity="center"
                android:onClick="homePage"
                android:text="@string/home"
                android:textColor="@android:color/darker_gray"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>