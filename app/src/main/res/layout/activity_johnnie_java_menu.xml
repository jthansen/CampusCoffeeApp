<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/custom_clemens_perk_menu_bg"
    >

    <TextView
        android:id="@+id/text_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/menu"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/darker_gray"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/text_menu"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:onClick="homePage"
        android:text="@string/home"
        android:textColor="@android:color/darker_gray"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_almond"
        android:layout_alignRight="@+id/button_almond"
        android:layout_below="@+id/button_almond"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="drinksPage"
        android:text="@string/drinks"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_chillers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_drinks"
        android:layout_alignRight="@+id/button_drinks"
        android:layout_below="@+id/button_drinks"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="chillersPage"
        android:text="CHILLERS"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_smoothies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_chillers"
        android:layout_alignRight="@+id/button_chillers"
        android:layout_below="@+id/button_chillers"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="smoothiesPage"
        android:text="@string/smoothies"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_teas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/button_smoothies"
        android:layout_alignRight="@+id/button_smoothies"
        android:layout_below="@+id/button_smoothies"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="teasPage"
        android:text="TEAS"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_Syrups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_teas"
        android:layout_below="@+id/button_teas"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="syrupsPage"
        android:text="SYRUPS"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_almond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:onClick="specialtyDrinksPage"
        android:text="@string/specialty_drinks"
        android:textStyle="bold" />

</RelativeLayout>
