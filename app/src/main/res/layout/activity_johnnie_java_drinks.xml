<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.campuscoffeeapp.JohnnieJavaDrinks" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="DRINKS"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/darker_gray"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_almond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_menu"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="lattePage"
                android:text="LATTE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_mocha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_almond"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_almond"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="mochaPage"
                android:text="MOCHA"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_cappuccino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_whiteChocolate"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_whiteChocolate"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="cappuccinoPage"
                android:text="CAPPUCCINO"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_macchiato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_turtleMocha"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_turtleMocha"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="macchiatoPage"
                android:text="MACCHIATO"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_americano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_macchiato"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="americanoPage"
                android:text="AMERICANO"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_depthCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_americano"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_americano"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="depthChargePage"
                android:text="DEPTH CHARGE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_chaiTeaLatte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_depthCharge"
                android:layout_alignRight="@+id/button_depthCharge"
                android:layout_below="@+id/button_depthCharge"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="chaiTeaLattePage"
                android:text="CHAI TEA LATTE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_steamers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_chaiTeaLatte"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_chaiTeaLatte"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="streamersPage"
                android:text="STEAMERS"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_appleCider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="appleCiderPage"
                android:text="APPLE CIDER"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_italianSoda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="italianSodaPage"
                android:text="ITALIAN SODAS"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_hotChocolate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/text_menu"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:onClick="hotChocolatePage"
                android:text="HOT CHOCOLATE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:gravity="center"
                android:onClick="homePage"
                android:text="@string/home"
                android:textColor="@android:color/darker_gray"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>