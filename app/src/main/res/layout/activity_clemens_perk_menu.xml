<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="bold"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_clemens_perk_menu_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.campuscoffeeapp.ClemensPerkMenu" >

    <TextView
        android:id="@+id/specialtyDrinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="@string/menu"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#92020c"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_JohnnieAutumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/specialtyDrinks"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:onClick="coffeePage"
        android:text="@string/coffee"
        android:textStyle="bold"
        android:background="@drawable/custom_clemens_perk_button_bg" />

    <Button
        android:id="@+id/button_cappuccino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_JohnnieAutumn"
        android:layout_alignRight="@+id/button_JohnnieAutumn"
        android:layout_below="@+id/button_JohnnieAutumn"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_clemens_perk_button_bg"
        android:gravity="center"
        android:onClick="teaPage"
        android:text="@string/tea"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_12oz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_cappuccino"
        android:layout_alignRight="@+id/button_cappuccino"
        android:layout_below="@+id/button_cappuccino"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_clemens_perk_button_bg"
        android:gravity="center"
        android:onClick="espressoDrinksPage"
        android:text="@string/espresso_drinks"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_depth_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_12oz"
        android:layout_alignRight="@+id/button_12oz"
        android:layout_below="@+id/button_12oz"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_clemens_perk_button_bg"
        android:gravity="center"
        android:onClick="specialtyDrinksPage"
        android:text="@string/specialty_drinks"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_mocha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_chillerz"
        android:layout_alignRight="@+id/button_chillerz"
        android:layout_below="@+id/button_chillerz"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_clemens_perk_button_bg"
        android:gravity="center"
        android:onClick="smoothiesPage"
        android:text="@string/smoothies"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_chillerz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_depth_charge"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_depth_charge"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_clemens_perk_button_bg"
        android:gravity="center"
        android:onClick="chillerzPage"
        android:text="@string/chillerz"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:onClick="homePage"
        android:text="@string/home"
        android:textColor="#92020c"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_cold_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_mocha"
        android:layout_alignRight="@+id/button_mocha"
        android:layout_below="@+id/button_mocha"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_clemens_perk_button_bg"
        android:gravity="center"
        android:onClick="nonespressoDrinksPage"
        android:text="@string/non_espresso_drinks"
        android:textStyle="bold" />

</RelativeLayout>